# Bauverein AG - Heizungs-Monitoring
# Umgebungsvariablen für Produktions-Deployment

# ============================================
# KUNDEN-KONFIGURATION
# ============================================
VITE_CUSTOMER_NAME=Bauverein AG
VITE_CUSTOMER_ADDRESS=Siemensstraße 20, 64289 Darmstadt
VITE_CUSTOMER_ID=bauverein-darmstadt

# ============================================
# SICHERHEIT
# ============================================
# Dieses Passwort wird beim ersten Start vom Admin gesetzt
# und dann gehasht gespeichert. Niemals im Code hinterlegen!
VITE_DEFAULT_PASSWORD=changeme-on-first-login

# ============================================
# MODUS-KONFIGURATION
# ============================================
# true = Demo/Simulationsmodus (keine echte Hardware nötig)
# false = MQTT-Modus (Verbindung zur echten Wärmepumpe)
VITE_SIMULATION_MODE=true

# ============================================
# MQTT-KONFIGURATION (nur wenn VITE_SIMULATION_MODE=false)
# ============================================
VITE_MQTT_BROKER=ws://localhost:9001
VITE_MQTT_USERNAME=
VITE_MQTT_PASSWORD=
VITE_MQTT_CLIENT_PREFIX=bauverein

# Topics - anpassen an die konkrete Wärmepumpen-Installation
VITE_MQTT_TOPIC_AUSSEN=darmstadt/temp/aussen
VITE_MQTT_TOPIC_VORLAUF=darmstadt/temp/wp175_vl
VITE_MQTT_TOPIC_RUECKLAUF=darmstadt/temp/wp175_rl
VITE_MQTT_TOPIC_QUELLE_VL=darmstadt/temp/source_vl
VITE_MQTT_TOPIC_QUELLE_RL=darmstadt/temp/source_rl
VITE_MQTT_TOPIC_PUFFER_OBEN=darmstadt/temp/puffer_oben
VITE_MQTT_TOPIC_PUFFER_MITTE=darmstadt/temp/puffer_mitte
VITE_MQTT_TOPIC_PUFFER_UNTEN=darmstadt/temp/puffer_unten
VITE_MQTT_TOPIC_PUMPE=darmstadt/pump/drehzahl
VITE_MQTT_TOPIC_STROM=darmstadt/power/strom
VITE_MQTT_TOPIC_COP=darmstadt/efficiency/cop
VITE_MQTT_TOPIC_BETRIEBSSTUNDEN=darmstadt/runtime/hours
VITE_MQTT_TOPIC_STATUS=darmstadt/status/mode
VITE_MQTT_TOPIC_FEHLERCODE=darmstadt/alarm/code
VITE_MQTT_TOPIC_ALARM=darmstadt/alarm/active

# ============================================
# ANLAGEN-DATEN
# ============================================
VITE_ANLAGE_NAME=Wärmepumpenanlage Bauverein AG
VITE_ANLAGE_LEISTUNG_THERMISCH=175
VITE_ANLAGE_LEISTUNG_ELEKTRISCH=38.9
VITE_ANLAGE_PUFFER_HEIZUNG=1500
VITE_ANLAGE_PUFFER_PVT=2000
VITE_ANLAGE_PUFFER_KAELTE=1000

# ============================================
# FEATURE-TOGGLES
# ============================================
VITE_ENABLE_EXPORT=true
VITE_ENABLE_ALARM_ACK=true
VITE_ENABLE_SETTINGS=true
